<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/view_toolbar"
        android:id="@+id/toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_tiny"
        android:onClick="cafesButtonClicked"
        android:foreground="?selectableItemBackground"
        android:id="@+id/cvCity">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium">

            <ImageView
                android:id="@+id/cafes_item_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/cafe_icon"/>

            <TextView
                android:id="@+id/cafes_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="@string/title_cafes_activity"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:onClick="barsButtonClicked"
        android:foreground="?selectableItemBackground"
        android:id="@+id/cvHistorical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium">

            <ImageView
                android:id="@+id/bars_item_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/cafe_icon"/>

            <TextView
                android:id="@+id/bars_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="@string/title_bars_activity"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>