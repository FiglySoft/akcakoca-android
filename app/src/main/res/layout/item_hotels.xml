<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:onClick="hotelClicked"
    android:foreground="?selectableItemBackground"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium">

        <ImageView
            android:id="@+id/hotel_item_icon"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:src="@drawable/hotel_icon"/>

        <TextView
            android:id="@+id/hotel_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/hotel_item_icon"
            android:layout_toLeftOf="@+id/right_arrow_item_icon"
            android:layout_alignTop="@+id/hotel_item_icon"
            android:text="Hotel"/>

        <TextView
            android:id="@+id/hotel_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hotel_item_icon"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="AkÃ§akoca"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/hotel_item_name"/>

        <TextView
            android:id="@+id/hotel_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hotel_item_icon"
            android:layout_below="@+id/hotel_item_location"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="3245234523"/>

        <ImageView
            android:id="@+id/right_arrow_item_icon"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/hotel_item_name"
            android:layout_alignBottom="@+id/hotel_item_phone"
            android:src="@drawable/right_arrow"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>